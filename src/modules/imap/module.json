  "milestone": "M1 Sprint 1.1",
  "dependencies": [
    "logger",
    "config"
  ],
  "requires": {
    "php": ">=8.1",
    "extensions": ["imap"]
  },
  "services": [
    "ImapClient"
  ],
  "hooks": [],
  "config": "config/imap.config.php",
  "status": "completed",
  "tests": {
    "manual": "tests/manual-test.php"
