# Application
APP_NAME="CI-Inbox"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://ci-inbox.local

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=ci_inbox
DB_USERNAME=root
DB_PASSWORD=

# Encryption (generiere mit: php -r "echo bin2hex(random_bytes(32));")
ENCRYPTION_KEY=your-32-byte-hex-key-here

# Cron Authentication (generiere mit: php -r "echo bin2hex(random_bytes(32));")
CRON_SECRET_TOKEN=your-secret-token-here

# Logging
LOG_LEVEL=debug
LOG_CHANNEL=file

# Session
SESSION_LIFETIME=120
SESSION_SECURE=false
SESSION_HTTPONLY=true

# Security
CSRF_TOKEN_LIFETIME=3600
RATE_LIMIT_LOGIN=5
RATE_LIMIT_API=60
