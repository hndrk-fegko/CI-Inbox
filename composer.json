{
    "name": "ci-inbox/ci-inbox",
    "description": "Collaborative IMAP Inbox Management for small teams",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Your Name",
            "email": "your.email@example.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ezyang/htmlpurifier": "^4.16",
        "illuminate/database": "^10.0",
        "monolog/monolog": "^3.5",
        "php-di/php-di": "^7.0",
        "phpmailer/phpmailer": "^6.9",
        "psr/container": "^2.0",
        "sabre/dav": "^4.6",
        "slim/psr7": "^1.6",
        "slim/slim": "^4.12",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "symfony/var-dumper": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "CiInbox\\": "src/",
            "App\\": "src/app/",
            "CiInbox\\Modules\\Logger\\": "src/modules/logger/src/",
            "CiInbox\\Modules\\Config\\": "src/modules/config/src/",
            "CiInbox\\Modules\\Encryption\\": "src/modules/encryption/src/",
            "CiInbox\\Modules\\Imap\\": "src/modules/imap/src/",
            "CiInbox\\Modules\\Label\\": "src/modules/label/src/",
            "CiInbox\\Modules\\Smtp\\": "src/modules/smtp/src/",
            "CiInbox\\Modules\\Webcron\\": "src/modules/webcron/src/",
            "CiInbox\\Modules\\Theme\\": "src/modules/theme/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CiInbox\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --testdox tests/",
        "test:unit": "phpunit --testdox tests/unit/",
        "test:integration": "phpunit --testdox tests/integration/"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
